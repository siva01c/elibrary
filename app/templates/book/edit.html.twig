{% extends 'base.html.twig' %}

{% block title %}Edit {{ book.title }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_book_index') }}">Books</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_book_preview', {id: book.id}) }}">{{ book.title }}</a></li>
                <li class="breadcrumb-item active" aria-current="page">Edit</li>
            </ol>
        </nav>
        {% if app.user %}
            <a href="{{ path('app_logout') }}" class="btn btn-outline-secondary">Logout</a>
        {% else %}
            <a href="{{ path('app_login') }}" class="btn btn-primary">Login</a>
        {% endif %}
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title mb-0">Edit Book: {{ book.title }}</h1>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.title) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.author) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.isbn) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.publicationYear) }}
                            </div>
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.description) }}
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_book_preview', {id: book.id}) }}" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Update Book</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}